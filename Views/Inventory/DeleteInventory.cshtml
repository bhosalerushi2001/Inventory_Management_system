@model Inventory_Management_system.Models.Inventory

@{
    ViewBag.Title = "DeleteInventory";
}

<h2>Delete an Enventory</h2>

<h3>Are you sure you want to delete this?</h3>
<div class="container">
    
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayName("Inventory Name")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt>
            @Html.DisplayName("Price")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Price)
        </dd>

        <dt>
            @Html.DisplayName("Quantity")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Quantity)
        </dd>

    </dl>

    @using (Html.BeginForm("DeleteInventory", "Inventory", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(model => model.Id)

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-danger" /> |
            @Html.ActionLink("Cancel", "DisplayInventory", "Inventory", new { @class = "btn btn-primary" })
        </div>
    }
</div>
